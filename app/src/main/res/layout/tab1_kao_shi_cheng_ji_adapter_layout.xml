<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/omeng_color_11"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/tab1_kao_shi_cheng_ji_red_circle_point" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90" />
            </LinearLayout>

            <TextView
                android:id="@+id/top1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab1_kscj_text_14"
                android:textColor="@color/omeng_color_4"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/cb90" />
            </LinearLayout>

            <TextView
                android:id="@+id/top2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/tab1_kscj_text_15"
                android:textColor="@color/omeng_color_6"
                android:textSize="@dimen/f13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/tab1_kao_shi_cheng_ji_red_circle_point" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90" />
            </LinearLayout>

            <TextView
                android:id="@+id/middle1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab1_kscj_text_16"
                android:textColor="@color/omeng_color_4"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/cb90" />
            </LinearLayout>

            <TextView
                android:id="@+id/middle2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/tab1_kscj_text_15"
                android:textColor="@color/omeng_color_6"
                android:textSize="@dimen/f13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/tab1_kao_shi_cheng_ji_red_circle_point" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/bottom1_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab1_kscj_text_17"
                android:textColor="@color/omeng_color_4"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp"
                    android:background="@color/cb90"
                    android:visibility="invisible" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:background="@color/cb90"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/bottom2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/tab1_kscj_text_15"
                android:textColor="@color/omeng_color_6"
                android:textSize="@dimen/f13" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>