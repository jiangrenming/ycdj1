<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_container"
        style="@style/ripple_common_white_click_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/color_line_view"
                android:layout_width="4dp"
                android:layout_height="14dp"
                android:background="#B60004" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/omeng_color_4"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_view"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/tab1_zuzhishenghuo_1_time"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/omeng_color_14"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:background="@drawable/tab1_wodejubao_status_1_shape"
            android:drawableLeft="@drawable/tab1_wodejubao_yihuifu_icon"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="@string/tab1_wdjb_text_21"
            android:textColor="@color/tab1_wo_de_ju_bao_yihuifu_color"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/red_point_text_view"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/status_text_view"
            android:layout_marginTop="4dp"
            android:background="@drawable/tab4_message_circle_red_point_shape" />
    </RelativeLayout>

    <View style="@style/color_divide_line_style" />
</LinearLayout>