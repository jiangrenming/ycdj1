<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_container"
        style="@style/ripple_common_white_click_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/line_image_view"
                android:layout_width="3dp"
                android:layout_height="14dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="1dp"
                android:background="@color/tab2_color" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/omeng_color_4"
                android:textSize="@dimen/f16" />
        </LinearLayout>

        <TextView
            android:id="@+id/content_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_view"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/omeng_color_13"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_text_view"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/tab1_zuzhishenghuo_1_time"
            android:drawablePadding="4dp"
            android:text="@string/tab3_wxy_text_31"
            android:textColor="@color/omeng_color_6"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/time_text_view"
            android:layout_alignParentRight="true"
            android:background="@drawable/tab3_weixinyuan_status_1_btn_shape"
            android:drawableLeft="@drawable/tab3_wei_xin_yuan_icon_aixin_1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:text="@string/tab3_wxy_text_22"
            android:textColor="@color/tab3_weixinyuan_status_text_color_1"
            android:textSize="@dimen/f13" />
    </RelativeLayout>

    <View style="@style/color_divide_line_style" />
</LinearLayout>