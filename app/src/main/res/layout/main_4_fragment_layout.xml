            android:layout_height="wrap_content"
            android:background="@drawable/tab4_user_center_top_bg">

            <ImageView
                android:id="@+id/message_image_view"
                style="@style/ripple_top_toolbar_btn_tran_click_style"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:src="@drawable/tab4_user_center_icon_mymessage" />

            <TextView
                android:id="@+id/unread_text_view"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_alignRight="@+id/message_image_view"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/tab4_unread_msg_count_shape"
                android:gravity="center"
                android:minWidth="18dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/omeng_color_11"
                android:textSize="@dimen/f8"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/setting_image_view"
                style="@style/ripple_top_toolbar_btn_tran_click_style"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_toLeftOf="@+id/message_image_view"
                android:scaleType="center"
                android:src="@drawable/tab4_user_center_icon_setting" />

            <com.shanjin.android.omeng.merchant.library.view.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/icon_image_view"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/tab4_user_center_icon_default_icon"
                app:border_color="@color/omeng_color_11"
                app:border_color2="@color/circle_image_border_2_color"
                app:border_width="1dp"
                app:border_width2="@dimen/divider_height" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_image_view"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/omeng_color_11"
                android:textSize="@dimen/f18"
                tools:text="韩卡卡" />

            <TextView
                android:id="@+id/dangzhibu_text_view"
