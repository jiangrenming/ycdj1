                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_4_text_11"
                    android:textColor="@color/omeng_color_13"
                    android:textSize="@dimen/f14" />
            </LinearLayout>

            <View style="@style/color_divide_shu_line_style" />

