<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_container"
        style="@style/ripple_common_white_click_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/icon_image_view"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/glide_place_holder_c8" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_image_view"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/omeng_color_4"
            android:textSize="@dimen/f16" />

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_text_view"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/icon_image_view"
            android:drawableLeft="@drawable/tab1_zuzhishenghuo_1_time"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/omeng_color_6"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/people_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_text_view"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/icon_image_view"
            android:drawableLeft="@drawable/tab1_zai_xian_xue_xi_people_icon"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/omeng_color_6"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/study_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/icon_image_view"
            android:layout_alignParentRight="true"
            android:background="@drawable/tab1_re_men_ke_jian_btn_selector"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="@string/tab1_rmkj_text_1"
            android:textColor="@drawable/tab1_re_men_ke_jian_text_color_selector"
            android:textSize="@dimen/f12" />
    </RelativeLayout>

    <View style="@style/color_divide_line_style" />
</LinearLayout>