<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/omeng_color_12"
    android:orientation="vertical">

    <include
        android:id="@+id/head_title_view"
        layout="@layout/head_title_option_with_back" />

    <com.shanjin.android.omeng.merchant.library.view.VerticalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_title_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="60dp">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/omeng_color_11"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:textColor="@color/omeng_color_4"
                android:textSize="@dimen/f16" />

            <View style="@style/color_divide_line_style" />

            <RelativeLayout
                android:id="@+id/count_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/omeng_color_11">

                <TextView
                    android:id="@+id/count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/tab1_zai_xian_xue_xi_people_icon"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/tab1_zxxx_detail_text_11"
                    android:textColor="@color/omeng_color_6"
                    android:textSize="@dimen/f13" />

                <TextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/tab1_zai_xian_xue_xi_time"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:text="@string/tab1_zxxx_detail_text_12"
                    android:textColor="#B60002"
                    android:textSize="@dimen/f13" />
            </RelativeLayout>

            <cn.jzvd.JZVideoPlayerStandard
                android:id="@+id/videoPlayer"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/glide_place_holder_c8" />

          <!--  <com.lidong.pdf.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone" />-->

            <com.github.barteksc.pdfviewer.PDFView
                android:id="@+id/pdfView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:visibility="gone"/>

            <View style="@style/color_divide_line_style" />

            <TextView
                android:id="@+id/xinde_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/omeng_color_12"
                android:drawableLeft="@drawable/tab1_zai_xian_xue_xi_xinde"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:text="@string/tab1_zxxx_detail_text_13"
                android:textColor="#F32129"
                android:textSize="@dimen/f15" />

            <View style="@style/color_divide_line_style" />

            <EditText
                android:id="@+id/input_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/tab1_tongzhigonggao_jubao_edit_bg"
                android:gravity="top"
                android:hint="@string/tab1_zxxx_detail_text_14"
                android:maxLength="200"
                android:minHeight="80dp"
                android:padding="10dp"
                android:textColor="@color/omeng_color_5"
                android:textColorHint="@color/omeng_color_6"
                android:textSize="@dimen/f16" />

            <TextView
                android:id="@+id/commit_text_view"
                style="@style/ripple_corner_red_click_style"
                android:layout_width="90dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tab1_zxxx_detail_text_21"
                android:textColor="@color/omeng_color_11"
                android:textSize="@dimen/f15" />
        </LinearLayout>
    </com.shanjin.android.omeng.merchant.library.view.VerticalScrollView>

    <com.shanjin.android.omeng.merchant.library.view.MultiStateView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/multi_state_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/head_title_view"
        app:msv_animateViewChanges="false"
        app:msv_emptyView="@layout/empty_view"
        app:msv_errorView="@layout/error_view"
        app:msv_loadingView="@layout/loading_view"
        app:msv_viewState="loading">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />
    </com.shanjin.android.omeng.merchant.library.view.MultiStateView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_shadow_height"
        android:layout_below="@id/head_title_view"
        android:background="@drawable/toolbar_bottom_shadow" />
</RelativeLayout>