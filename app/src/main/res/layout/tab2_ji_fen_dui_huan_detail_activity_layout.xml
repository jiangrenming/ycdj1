<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/omeng_color_11"
    android:orientation="vertical">

    <include
        android:id="@+id/head_title_view"
        layout="@layout/tab2_head_title_option_with_back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="#DB7511" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/tab2_toolbar_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/all_jifen_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tab2_jifenduihuan_jifen_icon"
            android:drawablePadding="5dp"
            android:text="@string/tab2_jfdh_text_11"
            android:textColor="@color/omeng_color_11"
            android:textSize="@dimen/f16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/icon_image_view"
            android:layout_width="110dp"
            android:layout_height="78dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/glide_place_holder_c8" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_image_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/omeng_color_4"
            android:textSize="@dimen/f15" />

        <TextView
            android:id="@+id/jifen_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_text_view"
            android:layout_toRightOf="@+id/icon_image_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/tab2_color"
            android:textSize="@dimen/f16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/jifen_text_view"
            android:layout_toRightOf="@+id/jifen_text_view"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="1dp"
            android:text="@string/tab2_jfdh_text_31"
            android:textColor="@color/tab2_color"
            android:textSize="@dimen/f13" />

        <TextView
            android:id="@+id/kucun_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jifen_text_view"
            android:layout_toRightOf="@+id/icon_image_view"
            android:textColor="@color/omeng_color_14"
            android:textSize="@dimen/f13" />
    </RelativeLayout>

    <View style="@style/color_divide_line_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="@string/tab2_jfdh_detail_text_11"
            android:textColor="@color/omeng_color_5"
            android:textSize="@dimen/f16" />

        <ImageView
            android:id="@+id/sub_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/tab2_ji_fen_dui_huan_add_bg"
            android:scaleType="center"
            android:src="@drawable/tab2_jifenduihuan_sub_icon" />

        <TextView
            android:id="@+id/count_text_view"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/tab2_ji_fen_dui_huan_edit_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/omeng_color_5"
            android:textSize="@dimen/f16" />

        <ImageView
            android:id="@+id/add_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-1dp"
            android:background="@drawable/tab2_ji_fen_dui_huan_add_bg"
            android:scaleType="center"
            android:src="@drawable/tab2_jifenduihuan_add_icon" />
    </LinearLayout>

    <View style="@style/color_divide_line_style" />

    <TextView
        android:id="@+id/commit_text_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab1_hu_dong_ping_lun_detail_btn_selector"
        android:gravity="center"
        android:text="@string/tab2_jfdh_detail_text_12"
        android:textColor="@color/omeng_color_11"
        android:textSize="@dimen/f16" />
</LinearLayout>