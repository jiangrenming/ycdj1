<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--=========================================================-->
    <style name="Theme.AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Material Theme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="stateSelector">@color/state_selector_light</item>
        <item name="accentColor">@color/accent</item>
        <item name="iconColor">@android:color/black</item>
        <item name="windowBackground">@color/window_background</item>
        <item name="fabCircleColor">@color/fabCircleColor_light</item>
    </style>
    <style name="Base.Theme.AppTheme.Light" parent="Theme.AppTheme.Light">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="actionMenuTextColor">@color/omeng_color_1</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <style name="Base.Theme.AppTheme.Light.Translucent" parent="Theme.AppTheme.Light">
        <!-- 解决activity切换时的黑屏问题 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="actionMenuTextColor">@color/omeng_color_1</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>
    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/task_slide_in_right_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/task_slide_out_left_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/task_slide_in_left_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/task_slide_out_right_anim</item>
    </style>
    <!--=========================================================-->
    <style name="main_tab_radiobutton_style" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/main_bottom_tab_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:textSize">@dimen/f12</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/omeng_color_1</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabTextColor">@color/omeng_color_5</item>
        <item name="tabSelectedTextColor">@color/omeng_color_1</item>
    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/f17</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="Tab2TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/tab2_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabTextColor">@color/omeng_color_5</item>
        <item name="tabSelectedTextColor">@color/tab2_color</item>
    </style>
    <style name="Tab3TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/tab3_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabTextColor">@color/omeng_color_5</item>
        <item name="tabSelectedTextColor">@color/tab3_color</item>
    </style>

    <style name="DefineDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="text_title_small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#1c1c1c</item>
        <item name="android:textSize">@dimen/f18</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="radio_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:indeterminateDrawable">@drawable/nemediacontroller_progressbar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/nemediacontroller_progressbar_thumb</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#bfbfbf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ==========================JPush========================== -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
