<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#3AB038" />
            <stroke android:width="@dimen/divider_height" android:color="#3AB038" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#ACACAC" />
            <stroke android:width="@dimen/divider_height" android:color="#ACACAC" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#4AC048" />
            <stroke android:width="@dimen/divider_height" android:color="#4AC048" />
        </shape>
    </item>
</selector>